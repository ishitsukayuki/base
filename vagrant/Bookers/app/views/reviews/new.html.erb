<% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
		 	</tr>
		</thead>
	    <tbody>
	    	<% @reviews.each do |review| %>
		 		<tr>
		 			<td><%= review.title %></td>
		 			<td><%= review.body %></td>
		 			<td><%= link_to "show", review_path(review), class: "show_#{review.id}" %></td>
		 			<td><%= link_to "Edit", edit_review_path(review), class: "edit_#{review.id}" %></td>
		 			<td><%= link_to "Destroy", review_path(review), method: :delete, class: "destroy_#{review.id}", data: {confirm: "Are you sure?"} %></td>
		 		</tr>
		 	<% end %>
		</tbody>
	</table>
<h2>New book</h2>
<%= form_for(@review, url: reviews_path) do |f| %>
	<div class="field">
		<label for="book-title">Title</label>
		<%= f.text_field :title, class: "book_title" %>
	</div>
	<div class="field">
		<label for="book-body">Body</label>
		<%= f.text_area :body, class: "book_body" %>
	</div>
	<div class="actions">
		<%= f.submit 'Create Book' %>
	</div>
<% end %>