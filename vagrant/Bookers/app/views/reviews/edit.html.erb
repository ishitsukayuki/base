<h1>Editing Book</h1>
<%= form_for(@review) do |f| %>
	<div class="field">
		<label>Title</label>
		<%= f.text_field :title, class: "book_title" %>
    </div>
	<div class="field">
		<label>Body</label>
		<%= f.text_area :body, class: "book_body" %>
    </div>
	<div class="actions">
		<%= f.submit 'Update Book' %>
	</div>
	<%= link_to "show", review_path(@review), class: "show_#{@review}" %>|
	<%= link_to "Back", new_review_path(@review), class: "back" %>
<% end %>
